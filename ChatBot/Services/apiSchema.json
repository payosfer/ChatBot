    {
        "name": "checkout",
        "path": "/api/app/checkout-sessions",
        "method": "POST",
        "description": "Checkout Session API, üye işyerlerinin ödeme formunu kendi web sitelerinde entegre etmelerine olanak tanır. Bu API ile bir ödeme oturumu başlatabilir ve kullanıcılarınızı ödeme formuna yönlendirebilirsiniz. Ödeme formu bir modal veya yeni sekme içinde görüntülenebilir.",
        "parameters": {
            "type": "object",
            "properties": {
                "amount" :{
                    "type": "integer",
                    "description": "İşlem tutarı"
                },
                "currency" :{
                    "type": "integer",
                    "enum": [0,1,2,3,4,5,6,7,8],
                    "description": "Para birimi. Try=0, Usd=1, Eur=2, Gbp=3, Ars=4, Brl=5, Cny=6, Aed=7, Iqd=8"
                },
                "installment" :{
                    "type": "integer",
                    "description": "Taksit sayısı"
                },
                "maxInstallment" :{
                    "type": "integer",
                    "description": "İzin verilen maksimum taksit sayısı"
                },
                "successUrl" :{
                    "type": "string",
                    "description": "Başarılı ödeme sonrası yönlendirilecek URL"
                },
                "cancelUrl" :{
                    "type": "string",
                    "description": "İptal edilen ödeme sonrası yönlendirilecek URL"
                },
                "productName" :{
                    "type": "string",
                    "description": "Ürün/hizmet adı"
                },
                "phoneNumber" :{
                    "type": "string",
                    "description": "Müşteri telefon numarası"
                },
                "emailAddress" :{
                    "type": "string",
                    "description": "Müşteri e-posta adresi"
                }
                
            },
            "required":["amount", "currency", "installment", "maxInstallment", "successUrl", "cancelUrl"]
        }
